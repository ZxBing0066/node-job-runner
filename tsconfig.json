{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",        //目标代码类型
        "noImplicitAny": false, //在表达式和声明上有隐含的'any'类型时报错。
        "sourceMap": true,     //用于debug   
        "rootDir":"./",      //仅用来控制输出的目录结构--outDir。
        "outDir":"./"     //重定向输出目录。   
    },
    "include":[
        "./index.ts",
        "./src/**/*"
    ],
    "exclude":[
    ]
}